<section>
  <div class="mx-auto max-w-screen-xl px-4 py-8 sm:px-6 sm:py-12 lg:px-8">
    <header class="text-center">
      <h2 class=" font-bold text-gray-900 sm:text-4xl">Nouvelle Collection!</h2>

      <!-- <p class="mx-auto mt-4 max-w-md text-gray-500"> -->
      <!---->
      <!-- </p> -->
    </header>

    <ul class="mt-8 grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
    {% for livre in toplivres%}
      <li>
        <a href="{{ path('app_boutique_livre', {'id': livre.id}) }}" class="group block overflow-hidden">
          <img
            src="{{livre.image}}"
            alt=""
            class="h-[350px] w-full object-cover transition duration-500 group-hover:scale-105 sm:h-[450px]"
          />

          <div class="relative bg-white pt-3">
            <h3 class="text-xs text-gray-700 group-hover:underline group-hover:underline-offset-4">
              {{livre.titre}}
            </h3>

            <p class="mt-2">
              <span class="sr-only">Prix</span>

              <span class="tracking-wider text-gray-900">{{livre.prix}} TND</span>
            </p>
          </div>
        </a>
      </li>
    {% endfor %}
    </ul>
  </div>
</section>
