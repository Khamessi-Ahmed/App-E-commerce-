{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}

  <div class="h-[80vh] min-h-fit flex justify-center items-center">
    <div class="flex flex-col gap-4 min-h-[50vh]">
    <h1>Categories</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ category.libelle }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ category.slug }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('app_categories_edit', {'id': category.id}) }}">edit</a>
    <a href="{{ path('app_categories') }}">back to list</a>


    {{ include('categories/_delete_form.html.twig') }}

</div>
</div>
{% endblock %}
