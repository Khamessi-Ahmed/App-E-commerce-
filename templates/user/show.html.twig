{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
  <div class="h-[80vh] min-h-fit flex justify-center items-center">
    <div class="flex justify-center flex-col gap-4 min-h-[50vh]">
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary w-44" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
    <a href="{{ path('app_user') }}">back to list</a>


    {{ include('user/_delete_form.html.twig') }}
    </div>
  </div>
{% endblock %}
